<%= form_with(model: project) do |form| %>
 <div class="cotainer" style="margin-top:200px">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header" style="font-size:25px">New Project</div>
                    <div class="card-body">
                        <form action="" method="">
                            <div class="form-group row">
                                  <%= form.label :name, class:"col-md-4 col-form-label text-md-right"%>
                                <div class="col-md-6">
                                  <%= form.text_field :name, class:"form-control" %>
                                </div>
                            </div>
                              <br>
                            <div class="form-group row">
                                 <%= form.label :description , class:"col-md-4 col-form-label text-md-right" %>
                                <div class="col-md-6">
                                  <%= form.text_area :description, class:"form-control"  %>
                                </div>  
                            </div>
                            <br>

                            <div class="col-md-6 offset-md-4">
                                <%= form.submit class: "btn btn-primary" , style:"margin-left:10px" %>
                              <% end %>
                            </div>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
